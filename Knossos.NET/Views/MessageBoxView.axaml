<UserControl
xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
x:Class="Knossos.NET.Views.MessageBoxView">
	<Border Background="#80000000">
		<!-- scrim -->
		<Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Border Grid.ColumnSpan="2" CornerRadius="12" Padding="16" Background="{DynamicResource ThemeBackgroundBrush}">
				<Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*">
					<!--<Image Grid.RowSpan="2" Width="28" Height="28" Margin="0,2,12,0" Source="avares://FluentAvalonia/Assets/Info24.png"/>-->
					<TextBlock x:Name="TitleText" Grid.Column="1" Classes="h1" FontWeight="SemiBold"/>
					<ScrollViewer Grid.Row="1" Grid.Column="1" MaxHeight="220">
						<TextBlock x:Name="BodyText" TextWrapping="Wrap"/>
					</ScrollViewer>
					<StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,16,0,0">
						<!-- Buttons injected from code-behind to honor default order/platform -->
						<StackPanel x:Name="ButtonsHostPanel" Orientation="Horizontal" Spacing="8"/>
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Border>
</UserControl>
