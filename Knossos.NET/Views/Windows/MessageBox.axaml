<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="200"
		Icon="/Assets/knossos-icon.ico"
		WindowStartupLocation="CenterOwner"
        x:Class="Knossos.NET.Views.MessageBox" 
		SizeToContent="WidthAndHeight" 
		Name="ThisWindow"
		CanResize="True">

	<Viewbox Stretch="Fill" StretchDirection="DownOnly" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="{Binding Width, ElementName=ThisWindow}" Height="{Binding Height, ElementName=ThisWindow}">
		<Grid Background="{StaticResource BackgroundColorPrimary}" MinWidth="600" MinHeight="150"  Width="{Binding Width, ElementName=ThisWindow}" Height="{Binding Height, ElementName=ThisWindow}" HorizontalAlignment="Center" RowDefinitions="*,Auto">
			<ScrollViewer MaxHeight="550" Grid.Row="0">
				<TextBlock Margin="20" HorizontalAlignment="Center" Name="Text" TextWrapping="Wrap"/>
			</ScrollViewer>
			<StackPanel Margin="0,20,0,0" Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal" Name="Buttons">
				<StackPanel.Styles>
					<Style Selector="Button">
						<Setter Property="Margin" Value="5"/>
					</Style>
				</StackPanel.Styles>
			</StackPanel>
		</Grid>
	</Viewbox>
</Window>
